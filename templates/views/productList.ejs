<!DOCTYPE html>
<html>
<head>
	<style type="text/css">
		body{
			margin:0px;
			padding: 0px;
			overflow-y: scroll;
			overflow-x: hidden;
		}
		.giveRating{
			margin: auto;
			width: 100%;
			height: 50px;
			display: flex;
			flex-direction: row;
			justify-content: center;
			margin-top: 10px;
		}
		.productList{
			display: inline-block;
			width: 300px;
			height: auto;
			border:1px solid black;
			padding-left: 10px;
			padding-bottom: 10px;
			margin: 10px;
		}
		input{
			width: 200px;
			margin:5px;
		}
	</style>
</head>
<%- include('../partials/headerDashboard') %>
<body>
	<form class="giveRating" action="/user/rateProduct/<%=userAndProduct.token%>" method ="POST">
		<input type="text" name="id" placeholder="Product Id">
		<input type="number" step="any" name="rating" min="0" max="5" placeholder="Give rating out of 5">
		<input type="submit" name="submit">
	</form>
	 <% for(var i=0; i<userAndProduct.productList.length; i++) {%>
	<div class="productList">
		<p> Id : <%= userAndProduct.productList[i]._id %>
		<p>Product : <%= userAndProduct.productList[i].name %></p>
		<p>Cost : <%= userAndProduct.productList[i].price %></p>
		<p>Rating : <%= userAndProduct.productList[i].rating %></p>
	</div>
	<% } %>
</body>
</html>